<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>chileme</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.cugb.javaee.starbucks.action.LoginControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>com.cugb.javaee.starbucks.action.ActionControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>/action</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>OrderAdd</servlet-name>
    <servlet-class>com.cugb.javaee.starbucks.action.OrderAddControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderAdd</servlet-name>
    <url-pattern>/OrderAdd</url-pattern>
  </servlet-mapping>
  
    <servlet>
     <servlet-name>dishModify</servlet-name>
     <servlet-class>com.cugb.javaee.starbucks.action.DishModifyControl</servlet-class>
   </servlet>
   <servlet-mapping>
     <servlet-name>dishModify</servlet-name>
     <url-pattern>/dishModify</url-pattern>
   </servlet-mapping>
   <servlet>
     <servlet-name>dishAdd</servlet-name>
     <servlet-class>com.cugb.javaee.starbucks.action.DishAddControl</servlet-class>
   </servlet>
   <servlet-mapping>
     <servlet-name>dishAdd</servlet-name>
     <url-pattern>/dishAdd</url-pattern>
   </servlet-mapping>
   <filter>
     <filter-name>CharFilter</filter-name>
     <filter-class>com.cugb.javaee.starbucks.utils.CharsetFilter</filter-class>
   </filter>
   <filter-mapping>
     <filter-name>CharFilter</filter-name>
     <url-pattern>/*</url-pattern>
     <dispatcher>REQUEST</dispatcher>
   </filter-mapping>
</web-app>